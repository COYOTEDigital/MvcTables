@{
    ViewBag.Title = "Kitchen Sink";
    var parentTableDefinition = Html.TableHelper("ListParentOrders");
    var childTableDefinition = Html.TableHelper("ListChildOrderDetails");
}

<h2>KitchenSink</h2>
<section id="Result">
    <h4>Result</h4>
    <div class="row-fluid">
        <div class="span6">
            <form class="mvc-table-filter" novalidate="novalidate">
                <fieldset>
                    <legend>Filters</legend>
                    <div>
                        
                        <input type="submit" value="Search" class="btn btn-primary">
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span6">
            <fieldset>
                <legend>Orders</legend>
                @parentTableDefinition.Table()
                @parentTableDefinition.Pagination()
            </fieldset>
        </div>
        <div class="span6">
            <fieldset>
                <legend>Details</legend>
                @childTableDefinition.Table()
            </fieldset>
        </div>
    </div>
</section>